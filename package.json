{
	"name": "mcswift-markdown",
	"displayName": "MarkSwift",
	"description": "",
	"version": "0.0.8",
	"engines": {
		"vscode": "^1.62.3"
	},
	"publisher": "McSwift",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCustomEditor:mcswift.vditor",
		"onCustomEditor:mcswift.milkdown"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/AshenBird/vscode-markdown"
	},
	"main": "./out/host/index.js",
	"contributes": {
		"customEditors": [
			{
				"viewType": "mcswift.vditor",
				"displayName": "MarkSwift Vditor",
				"selector": [
					{
						"filenamePattern": "*.md"
					}
				],
				"priority": "option"
			},
			{
				"viewType": "mcswift.milkdown",
				"displayName": "MarkSwift Milkdown",
				"selector": [
					{
						"filenamePattern": "*.md"
					}
				],
				"priority": "option"
			}
		]
	},
	"scripts": {
		"pub": "vsce publish --yarn",
		"vscode:prepublish": "npm run build",
		"build": "node scripts/build.js",
		"watch": "node scripts/watch.js",
		"watch:host": "cd src/host && tsc -watch -p ./",
		"build:host": "cd src/host && tsc -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.62.0",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vitejs/plugin-vue": "^1.10.0",
		"@vitejs/plugin-vue-jsx": "^1.3.0",
		"@vscode/test-electron": "^1.6.2",
		"cross-env": "^7.0.3",
		"esbuild": "^0.13.13",
		"eslint": "^8.1.0",
		"execa": "^5.1.1",
		"fs-extra": "^10.0.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"sass": "^1.43.4",
		"typescript": "^4.4.4",
		"vite": "^2.6.14"
	},
	"dependencies": {
		"@emotion/css": "^11.5.0",
		"@milkdown/core": "^5.1.2",
		"@milkdown/ctx": "^5.1.2",
		"@milkdown/design-system": "^5.1.2",
		"@milkdown/plugin-clipboard": "^5.1.2",
		"@milkdown/plugin-collaborative": "^5.1.2",
		"@milkdown/plugin-emoji": "^5.1.2",
		"@milkdown/plugin-history": "^5.1.2",
		"@milkdown/plugin-listener": "^5.1.2",
		"@milkdown/plugin-math": "^5.1.2",
		"@milkdown/plugin-prism": "^5.1.2",
		"@milkdown/plugin-slash": "^5.1.2",
		"@milkdown/plugin-tooltip": "^5.1.2",
		"@milkdown/preset-commonmark": "^5.1.2",
		"@milkdown/preset-gfm": "^5.1.2",
		"@milkdown/theme-nord": "^5.1.2",
		"@milkdown/utils": "^5.1.2",
		"@milkdown/vue": "^5.1.2",
		"@vicons/ionicons5": "^0.11.0",
		"katex": "^0.15.1",
		"naive-ui": "^2.21.4",
		"prosemirror-model": "^1.15.0",
		"vditor": "^3.8.7",
		"vue": "^3.2.22"
	}
}