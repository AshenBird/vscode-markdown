{
	"name": "mcswift-vditor",
	"displayName": "mcswift-vditor",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.62.3"
	},
	"publisher": "McSwift",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCustomEditor:mcswift.vditer"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/AshenBird/vscode-markdown"
	},
	"main": "./out/host/index.js",
	"contributes": {
		"customEditors": [
			{
				"viewType": "mcswift.vditer",
				"displayName": "McSwift Markdown",
				"selector": [
					{
						"filenamePattern": "*.md"
					}
				],
				"priority": "default"
			}
		]
	},
	"scripts": {
		"dev:client": "vite",
		"vscode:prepublish": "npm run build",
		"build": "node scripts/build.js",
		"watch": "node scripts/watch.js",
		"watch:host": "cd src/host && tsc -watch -p ./",
		"build:host": "cd src/host && tsc -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.62.0",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"cross-env": "^7.0.3",
		"esbuild": "^0.13.13",
		"eslint": "^8.1.0",
		"execa": "^5.1.1",
		"fs-extra": "^10.0.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"sass": "^1.43.4",
		"typescript": "^4.4.4",
		"vite": "^2.6.14"
	},
	"dependencies": {
		"vditor": "^3.8.7"
	}
}